vbell off
# defscrollback 10000
# # Set the caption on the bottom line
caption always "%{= kw}%-w%{= wk}%n %t%{-}%+w %-= @%H - %c"
startup_message off
msgwait 2
autodetach on
#
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
#
# # caption always "%{rk}%?%-Lw%?%{-b}(%{+b}%n %t%{-b})%{-b}%?(%u)%?%{rk}%?%+Lw%?%="
#
# #terminfo and termcap for nice 256 color terminal
# # allow bold colors - necessary for some reason
attrcolor b ".I"
# # erase background with current bg color
defbce "on"
# shell /bin/zsh

# ===================================
# Set up the various Leanplum servers
# ===================================

chdir

# TODO: REPLACE THIS with the path to your redis installation.
chdir /home/subev/work/redis-3.0.1/src  # eg. dev/redis-2.8.13/src
screen -t "redis" 6
# Using the stuff command is preferable to just running the command, since this
# enters it into command history. If it fails, you can relaunch by pressing up
# and enter.
stuff './redis-server'


# TODO: REPLACE THIS with the path to your leanplum git repository.
chdir /home/subev/work/Leanplum  # eg. src/leanplum
screen -t "sh" 1

chdir Tools
screen -t "engine" 2
stuff './run_devserver'

screen -t "reports" 3
stuff './run_reports_server'

chdir ../NodeServer
screen -t "node/devsocket" 4
stuff 'node main.js'

chdir ../Server
screen -t "grunt/js-comp" 5
stuff 'grunt'

chdir ..
screen -t "vim" 0
stuff "vim\015"
